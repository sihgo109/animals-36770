<div class="card">
  <%= link_to image_tag(animal.image, class: :card__img ), animal_path(animal) %>
  <div class="card__body">
    <%= link_to animal.name, animal_path(animal.id), class: :card__title%>
    <p class="card__summary">
      <%= animal.catch_copy %>
    </p>
    <%= link_to "#{animal.user.user}", root_path, class: :card__user %>
  </div>
</div>